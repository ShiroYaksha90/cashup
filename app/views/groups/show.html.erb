  <div class = 'container'>
<%= render @group %>
<div class ="no-transaction">
<h4>Transactions</h4>
  <% if @entities.empty? %>
    <p>No transactions available.</p>
  <% else %>
      <div>
        <% @entities.each do |entity| %>
          <% if can? :read,  entity%>
            <div>
              <p><%= entity.name.capitalize%></p>
              <p>$<%= entity.amount%></p>
            </div>
          <% end %>
        <% end %>
      </div>
  <% end %>
</div>


<div class="add-category-btn">
  <%= link_to "Add transaction", new_user_entity_path(current_user), class: 'btn' %>
</div>
  </div>
